 	 </inertial>
 	 <visual>
 	   <origin xyz="-0.0 0.24 -0.065" rpy="0 0 0"/>
 	   <geometry>
  	    <mesh filename="file://$(find hoverboard_demo_description)/meshes/right_plate.stl" scale="0.001 0.001 0.001"/>
