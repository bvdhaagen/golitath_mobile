	    </geometry>
	    <material name="black"/>
 	 </visual>
	  <collision>
  	  <origin xyz="-0.0 -0.0 -0.141" rpy="0 0 0"/>
 	   <geometry>
  	    <mesh filename="file://$(find hoverboard_demo_description)/meshes/lidar.stl" scale="0.001 0.001 0.001"/>
  	  </geometry>
 	 </collision>
	</link>
	
