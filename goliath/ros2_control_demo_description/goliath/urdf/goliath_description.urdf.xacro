 	 <collision>
 	   <origin xyz="0.32 -0.0 -0.071" rpy="0 0 0"/>
 	   <geometry>
 	     <mesh filename="file://$(find hoverboard_demo_description)/meshes/rear_plate.stl" scale="0.001 0.001 0.001"/>
 	   </geometry>
 	 </collision>
	</link>

	<link name="right_plate">
