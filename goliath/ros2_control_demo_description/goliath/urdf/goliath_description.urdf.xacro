 	 <collision>
  	  <origin xyz="0.164479 -0.0 -0.108" rpy="0 0 0"/>
  	  <geometry>
  	    <mesh filename="file://$(find hoverboard_demo_description)/meshes/imu.stl" scale="0.001 0.001 0.001"/>
